{
  "name": "claudebench",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "oxlint",
    "prepare": "husky",
    "dev": "turbo dev",
