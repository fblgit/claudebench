# Server environment configuration example
# Copy this file to .env and fill in your values

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/claudebench

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Authentication Configuration
BETTER_AUTH_SECRET=generate_a_secure_32_char_min_secret_key
BETTER_AUTH_URL=http://localhost:3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# Optional: Redis authentication
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# Server Configuration
PORT=3000
NODE_ENV=development

# Instance Configuration (for distributed workers)
INSTANCE_ID=worker-1
INSTANCE_ROLE=worker

# Inference Server Configuration (for LLM/AI features)
INFERENCE_SERVER_URL=http://localhost:8000
# Optional: Inference server authentication
# INFERENCE_API_KEY=your_inference_api_key

# Optional: Monitoring and Metrics
# METRICS_ENABLED=true
# METRICS_PORT=9090