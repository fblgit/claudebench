{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "prisma": ["node_modules/prisma"]
    },
    "outDir": "./dist",
    "types": [
        "bun"

    ],
    "composite": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  }
}
